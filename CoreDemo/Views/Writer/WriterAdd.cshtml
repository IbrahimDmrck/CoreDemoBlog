@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil</h4>
                <div class="forms-sample">
                    @Html.HiddenFor(x => x.WriterID)
                    <div class="form-group">
                        <label for="exampleInputName1">Ad-Soyad</label>
                        @*<input type="text" class="form-control" id="exampleInputName1" asp-for="WriterName" placeholder="Ad-Soyad">*@
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterName)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email Adresi</label>
                        @*<input type="email" class="form-control" id="exampleInputEmail3" asp-for="WriterMail" placeholder="Email">*@
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterMail)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @*<input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword" placeholder="Password">*@
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterPassword)
                    </div>
                    <div class="form-group">
                        <label>Profil Fotoğrafı</label>
                        <input type="file" name="WriterImage">
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @*<textarea class="form-control" id="exampleTextarea1" asp-for="WriterAbout" rows="4"></textarea>*@
                        @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>

</form>

