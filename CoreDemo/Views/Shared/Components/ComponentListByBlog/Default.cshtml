@model IEnumerable<EntityLayer.Concrete.Comment>
<h2>Yorumlar</h2>
<hr />
<div class="comment-top">
    @if (Model.Count() == 0)
    {
        <h4 class="text-info">İlk Yorumu Sen Yap</h4>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid rounded-circle" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>@item.CommentContent</p>
                </div>
            </div>
        }
    }
</div>