@using CoreDemo.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Çalışanlar</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="row">ID</th>
            <th scope="row">Name</th>
            <th scope="row">Sil</th>
            <th scope="row">Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td ><a href="/EmployeeTest/DeleteEmployee/@item.ID" class="btn btn-danger">Sİl</a></td>
                <td><a href="/EmployeeTest/EditEmployee/@item.ID" class="btn btn-success">Düzenle</a></td>
            </tr>

        }
    </tbody>
</table>
<br />
<a href="/EmployeeTest/AddEmployee" class="btn btn-outline-primary">Yeni çalışan Ekle</a>




